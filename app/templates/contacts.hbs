<div  class="main" onsubmit="event.preventDefault();">
    <div id="first">
        <div id="searchdiv">
            <input id="textbox" type="search" placeholder="Search the Addresser">
            <button id="addbtn" type="button" class="btn btn-warning" {{action "add"}}>
                Add
            </button>
        </div>
    </div>
</div>
<div class="forMarg">
    {{#each model as |data|}}
        <table class="TB">
            <tbody>
            <tr>
                <td colspan="6" class="standard-tdTEXT">{{data.name}}</td>
            </tr>
            <tr>
                <td colspan="2" rowspan="2" class="standard-td">
                    <button class="editbtn btn btn-success" type="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                </td>
                <td colspan="2" rowspan="2" class="standard-td">
                    <button class=" btn btn-danger trashbtn" type="button" {{action "delete" data.ids}}>
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>
                </td>
                <td colspan="2" rowspan="2" class="standard-td">
                    <button data-target="#exampleModal" class="viewbtn favoritebtn btn btn-info" type="button">
                        View Contact <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
            </tbody>
        </table>
    {{/each}}
</div>
{{outlet}}
